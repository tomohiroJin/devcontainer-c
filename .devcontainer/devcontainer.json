{
  "name": "C Development Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "settings": {
        "c-cpp-flylint.flexelint.enable": false, // Flexelint を無効化
        "c-cpp-flylint.cppcheck.enable": true, // CppCheck を有効化
        "c-cpp-flylint.cppcheck.path": "/usr/bin/cppcheck", // CppCheck のパス
        "c-cpp-flylint.clang.enable": true,
        "c-cpp-flylint.lizard.enable": true,
        "c-cpp-flylint.lizard.path": "/usr/local/bin/lizard", // Lizard のパス
        "c-cpp-flylint.flawfinder.enable": true,
        "c-cpp-flylint.flawfinder.path": "/usr/local/bin/flawfinder", // FlawFinder のパス
        "c-cpp-flylint.includePaths": [
          "/usr/include",
          "/usr/include/gtest",
          "/usr/include/boost",
          "${workspaceFolder}/src",
          "${workspaceFolder}/tests"
        ]
      },
      "extensions": [
        "ms-vscode.cpptools",
        "formulahendry.code-runner",
        "ms-vscode.cmake-tools",
        "ajshort.include-autocomplete",
        "matepek.vscode-catch2-test-adapter",
        "VisualStudioExptTeam.vscodeintellicode",
        "twxs.cmake",
        "streetsidesoftware.code-spell-checker",
        "cschlosser.doxdocgen",
        "eamodio.gitlens",
        "jbenden.c-cpp-flylint",
        "usernamehw.errorlens",
        "MS-CEINTL.vscode-language-pack-ja",
        "oderwat.indent-rainbow",
        "mechatroner.rainbow-csv",
        "esbenp.prettier-vscode",
        "aaron-bond.better-comments",
        "mosapride.zenkaku",
        "christian-kohler.path-intellisense",
        "streetsidesoftware.code-spell-checker",
        "shardulm94.trailing-spaces",
        "donjayamanne.githistory",
        "mhutchie.git-graph",
        "ms-vsliveshare.vsliveshare",
        "GitHub.github-vscode-theme",
        "wayou.vscode-todo-highlight"
      ]
    }
  },
  "remoteUser": "root"
}
